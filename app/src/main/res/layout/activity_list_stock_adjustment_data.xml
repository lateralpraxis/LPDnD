<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableGridHead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TableRow
                android:id="@+id/tableHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                tools:ignore="UselessParent">

                <!-- 1/0 -->

                <TextView
                    android:id="@+id/tvAdjDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".28"
                    android:text="@string/label_AdjDate"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <!-- 1/1 -->

                <TextView
                    android:id="@+id/tvItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".24"
                    android:text="@string/label_Item"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <!-- 1/2 -->

                <TextView
                    android:id="@+id/tvExistInv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".16"
                    android:gravity="right"
                    android:text="@string/label_ExistInventory"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <!-- 1/3 -->

                <TextView
                    android:id="@+id/tvAdjQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".16"
                    android:gravity="right"
                    android:text="@string/label_AdjQty"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <!-- 1/4 -->

                <TextView
                    android:id="@+id/tvNewInv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".16"
                    android:gravity="end"
                    android:text="@string/label_NewInventory"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableReason"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                tools:ignore="UselessParent">

                <!-- 1/0 -->

                <TextView
                    android:id="@+id/tvRm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".28"
                    android:text=""
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".72"
                    android:text="@string/label_Remarks"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>